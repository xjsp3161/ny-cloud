<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nycloud.admin.mapper.SysUserRolePkMapper">
  <resultMap id="BaseResultMap" type="com.nycloud.admin.model.SysUserRolePk">
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="role_id" jdbcType="INTEGER" property="roleId" />
  </resultMap>
  <insert id="insertUserRoles" parameterType="java.util.List">
    insert into sys_user_role_pk (user_id, role_id)
    values
    <foreach collection="list" item="item" index="index" separator=",">
      ( #{item.userId}, #{item.roleId} )
    </foreach>
  </insert>
  <delete id="deleteUserRoles" parameterType="java.util.Map">
    delete from sys_user_role_pk where role_id = #{roleId,jdbcType=INTEGER} and user_id in
    <foreach item="item" collection="userIds" open="(" separator="," close=")">
      #{item}
    </foreach>
  </delete>
</mapper>